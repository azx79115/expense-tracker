<div class="container mt-5">
  <h2 class="text-center">修改支出</h2>
  <form action="/edit" method="PUT">
    <div class="mb-3">
      <label for="expenseName" class="form-label">名稱</label>
      <input type="text" class="form-control" id="expenseName" placeholder="輸入支出名稱">
    </div>
    <div class="mb-3">
      <label for="expenseDate" class="form-label">日期</label>
      <input type="date" class="form-control" id="expenseDate">
    </div>
    <div class="mb-3">
      <label for="expenseCategory" class="form-label">類別</label>
      <select class="form-select" id="expenseCategory">
        <option selected>選擇類別</option>
        <option value="1">家居物業</option>
        <option value="2">交通出行</option>
        <option value="3">休閒娛樂</option>
        <option value="4">餐飲食品</option>
        <option value="5">其他</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="expenseAmount" class="form-label">金額</label>
      <input type="number" class="form-control" id="expenseAmount" placeholder="輸入支出金額">
    </div>
    <button type="submit" class="btn btn-primary ">新增支出</button>
  </form>
</div>