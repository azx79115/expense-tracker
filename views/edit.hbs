<div class="container mt-5">
  <h2 class="text-center">修改支出</h2>
  <form action="/records/{{record._id}}?_method=PUT" method="post">
    <div class="mb-3">
      <label for="name" class="form-label">名稱</label>
      <input
        type="text"
        class="form-control"
        id="name"
        placeholder="輸入支出名稱"
        name="name"
        value="{{record.name}}"
        required
      />
    </div>
    <div class="mb-3">
      <label for="date" class="form-label">日期</label>
      <input
        type="date"
        class="form-control"
        id="date"
        name="date"
        value="{{record.date}}"
      />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">類別</label>
      <select
        class="form-select"
        id="category"
        name="category"
        value="{{record.category}}"
        required
      >
        <option selected disabled>選擇類別</option>
        <option {{#if (match record.category "家居物業" )}}selected{{/if}} value="家居物業">家居物業</option>
        <option {{#if (match record.category "交通出行" )}}selected{{/if}} value="交通出行">交通出行</option>
        <option {{#if (match record.category "休閒娛樂" )}}selected{{/if}} value="休閒娛樂">休閒娛樂</option>
        <option {{#if (match record.category "餐飲食品" )}}selected{{/if}} value="餐飲食品">餐飲食品</option>
        <option {{#if (match record.category "其他" )}}selected{{/if}} value="其他">其他</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="amount" class="form-label">金額</label>
      <input
        type="number"
        class="form-control"
        id="amount"
        placeholder="輸入支出金額"
        name="amount"
        value="{{record.amount}}"
        required
      />
    </div>
    <button type="submit" class="btn btn-primary">確認修改支出</button>
  </form>
</div>