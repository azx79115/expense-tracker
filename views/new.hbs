<div class="container mt-5">
  <h2 class="text-center">新增支出</h2>
  <form action="/records/new" method="post">
    <div class="mb-3">
      <label for="name" class="form-label">名稱</label>
      <input
        type="text"
        name="name"
        class="form-control"
        id="name"
        placeholder="輸入支出名稱"
        required
      />
    </div>
    <div class="mb-3">
      <label for="date" class="form-label">日期</label>
      <input type="date" name="date" class="form-control" id="date" />
    </div>
    <div class="mb-3">
      <label for="category" class="form-label">類別</label>
      <select class="form-select" name="category" id="category" required>
        <option disabled>選擇類別</option>
        <option value="家居物業">家居物業</option>
        <option value="交通出行">交通出行</option>
        <option value="休閒娛樂">休閒娛樂</option>
        <option value="餐飲食品">餐飲食品</option>
        <option value="其他">其他</option>
      </select>
    </div>
    <div class="mb-3">
      <label for="amount" class="form-label">金額</label>
      <input
        type="number"
        name="amount"
        class="form-control"
        id="amount"
        placeholder="輸入支出金額"
        required
      />
    </div>
    <button type="submit" class="btn btn-primary">新增支出</button>
  </form>
</div>